@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <td>Movie</td>
        <td>Genre</td>
    </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id}, null)
                </td>
                <td>@movie.Genre.Description</td>
            </tr>
        }
    </tbody>
</table>
