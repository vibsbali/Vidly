@model System.Collections.Generic.List<Vidly.Models.Customer>

@{
    ViewBag.Title = "title";
}

<h2>Customers</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(customer.Name, "Details", "Customers", new {id = customer.Id}, null)
                </td>
                <td>
                    @string.Format($"{customer.MembershipType.DiscountRate * 100} %") 
                </td>
            </tr>
        }
    </tbody>
</table>
